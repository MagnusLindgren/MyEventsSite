<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyEvents</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container d-sm-inline-flex">
                <a class="navbar-brand" asp-area="" asp-page="/Index">MyEvents</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <ul class="navbar-nav flex-grow-1 justify-content-start">
                    <li class="nav-item mx-3">
                        <a class="btn btn-outline-primary" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="btn btn-outline-dark" asp-area="" asp-page="/Events/Index">Events</a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="btn btn-outline-dark" asp-area="" asp-page="/Attendees/MYEvents">My Events</a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="btn btn-outline-dark" asp-area="" asp-page="/Organizers/Index">Organizers</a>
                    </li>
                </ul>
            </div>
            <div class="container d-sm-inline-flex">
                <ul class="navbar-nav flex-grow-1 justify-content-end">
                    <li class="nav-item mx-1">
                        <a class="btn btn-outline-primary" asp-area="" asp-page="/Events/Index">Login</a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="btn btn-outline-danger" asp-area="" asp-page="/Events/Index">Register</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - MyEvents - <a asp-area="" asp-page=""></a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
