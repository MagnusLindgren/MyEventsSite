@model MyEvents.Pages.Organizers.IndexModel

@{
    ViewData["Title"] = "Organizers";
}

<h1>Organizers</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Organizer[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Organizer[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Organizer[0].PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Organizer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.OrganizerId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.OrganizerId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.OrganizerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
