@page
@model MyEvents.Pages.Attendees.IndexModel

@{
    ViewData["Title"] = "My Profile";
}

<h1>My details</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Attendee[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attendee[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attendee[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attendee[0].Events)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Attendee) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Events)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
